{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Flexa",
  "patterns": [
    {
      "match": "\\b(namespace|include namespace|exclude namespace)\\s+([_a-zA-Z]([_a-zA-Z0-9]|\\.)*)\\b",
      "captures": {
        "1": {
          "name": "keyword.control.flx"
        },
        "2": {
          "name": "entity.name.class.flx"
        }
      }
    },
    {
      "match": "\\b(using)\\s+([_a-zA-Z][_a-zA-Z0-9]*(?:\\.[_a-zA-Z][_a-zA-Z0-9]*)*)\\b;",
      "captures": {
        "1": {
          "name": "keyword.control.flx"
        },
        "2": {
          "patterns": [
            {
              "match": "([_a-zA-Z][_a-zA-Z0-9]*)",
              "name": "entity.name.class.flx"
            },
            {
              "match": "\\.",
              "name": "punctuation.separator.flx"
            }
          ]
        }
      }
    },
    {
      "name": "keyword.control.flx",
      "match": "\\b(namespace|include|exclude|using|if|else|while|do|for|foreach|enum|switch|case|break|default|continue|exit|const|var|fun|return|try|catch|throw|struct)\\b"
    },
    { "include": "#multiline-strings" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#functions" },
    { "include": "#builtins" },
    { "include": "#numbers" },
    { "include": "#structs" },
    { "include": "#variables" },
    { "include": "#strings" },
    { "include": "#line-comments" },
    { "include": "#block-comments" },
    { "include": "#ternary-operator" },
    { "include": "#expressions" }
  ],
  "repository": {
    "ternary-operator": {
      "patterns": [
        {
          "name": "meta.ternary-expr.flx",
          "begin": "(?<!:|\\w)\\?",
          "end": ":",
          "beginCaptures": {
            "0": { "name": "keyword.operator.ternary.flx" }
          },
          "patterns": [
            { "include": "#expressions" }
          ]
        },
        {
          "name": "meta.ternary-alternate.flx",
          "begin": ":",
          "end": "(?=;|\\)|\\}|$)",
          "beginCaptures": {
            "0": { "name": "keyword.operator.ternary.flx" }
          },
          "patterns": [
            { "include": "#expressions" }
          ]
        }
      ]
    },
    "multiline-strings": {
      "patterns": [
        {
          "name": "string.quoted.backtick.flx",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "constant.character.escape.flx",
              "match": "\\\\."
            },
            {
              "name": "constant.character.flx",
              "begin": "\\$\\{",
              "end": "\\}",
              "patterns": [
                { "include": "#interpolated-expressions" }
              ]
            },
            {
              "match": "[^\\`\\$]+",
              "name": "string.quoted.backtick.flx"
            }
          ]
        }
      ]
    },
    "interpolated-arrays": {
      "patterns": [
        {
          "name": "keyword.operator.flx",
          "begin": "\\{",
          "end": "\\}",
          "patterns": [
            { "include": "#interpolated-expressions" }
          ]
        }
      ]
    },
    "interpolated-structs": {
      "patterns": [
        {
          "name": "entity.name.class.flx",
          "match": "\\b([_a-zA-Z][_a-zA-Z0-9]*)\\b(?=\\s*\\{)"
        }
      ]
    },
    "interpolated-expressions": {
      "patterns": [
        { "include": "#line-comments" },
        { "include": "#block-comments" },
        { "include": "#types" },
        { "include": "#constants" },
        { "include": "#numbers" },
        { "include": "#functions" },
        { "include": "#builtins" },
        { "include": "#keywords" },
        { "include": "#strings" },
        { "include": "#interpolated-arrays" },
        { "include": "#interpolated-structs" },
        { "include": "#multiline-strings" },
        { "include": "#variables" },
        { "include": "#operators" },
        { "include": "#ternary-operator" },
        { "include": "#expressions" }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.flx",
          "match": "(\\+|\\-|\\*|\\/|%|\\/%|\\*\\*|\\^|\\&|\\||~|<<|>>|==|!=|<|>|<=|>=|<=>|\\+\\+|\\-\\-|\\?|:|::|=|,|\\(|\\)|\\{|\\})"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.flx",
          "match": "\\b(bool|int|float|char|string|function|any)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.flx",
          "match": "\\b(true|false|this|null|not|and|or|in|ref|unref|typeof|typeid)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.flx",
          "match": "\\b[_a-zA-Z][_a-zA-Z0-9]*\\s*(?=\\()"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.flx",
          "match": "\\b(print|println|read|readch|len|system|is_any|is_array|is_struct)\\b"
        }
      ]
    },
    "structs": {
      "patterns": [
        {
          "name": "entity.name.class.flx",
          "patterns": [
            {
              "match": "\\bstruct\\s+([_a-zA-Z][_a-zA-Z0-9]*)\\b",
              "captures": {
                "1": {
                  "name": "entity.name.class.flx"
                }
              }
            },
            {
              "match": "\\b([_a-zA-Z][_a-zA-Z0-9]*)\\b::",
              "captures": {
                "1": {
                  "name": "entity.name.class.flx"
                }
              }
            },
            {
              "match": "(?<=:\\s*)\\b[_a-zA-Z][_a-zA-Z0-9]*\\b",
              "name": "entity.name.class.flx"
            },
            {
              "match": "\\b([_a-zA-Z][_a-zA-Z0-9]*)\\b(?=\\s*\\{)",
              "name": "entity.name.class.flx"
            }
          ]
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.flx",
          "match": "\\b[_a-zA-Z][_a-zA-Z0-9]*\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.single.flx",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.flx",
              "match": "\\\\."
            },
            {
              "match": "[^\\\\']",
              "name": "string.quoted.single.flx"
            }
          ]
        },
        {
          "name": "string.quoted.double.flx",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.flx",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.flx",
          "patterns": [
            {
              "name": "constant.numeric.integer.flx",
              "match": "\\b([0-9]+[fF]?|0b[01]+|0o[0-7]+|0d[0-9]+|0x[0-9a-fA-F]+)\\b"
            },
            {
              "name": "constant.numeric.float.flx",
              "match": "\\b([0-9]*\\.[0-9]+([eE][+-]?[0-9]+)?[fF]?|[0-9]+([eE][+-]?[0-9]+)[fF]?)\\b"
            }
          ]
        }
      ]
    },
    "line-comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.flx",
          "match": "\\/\\/.*$"
        }
      ]
    },
    "block-comments": {
      "patterns": [
        {
          "name": "comment.block.flx",
          "begin": "\\/\\*",
          "end": "\\*\\/",
          "patterns": [
            {
              "name": "constant.character.escape.flx",
              "match": "\\\\."
            }
          ]
        }
      ]
    }
  },
  "scopeName": "source.flx"
}
